@page "/taskMaster/task/{Id:int}"

@code {
    [Parameter]
    public int Id{ get; set; }

    private string _title;

    private int _orderId;

    private DateTime _date;

    private DateTime _timeStart;

    private DateTime _timeEnd;

    private int _specializationId;

    private string _status;

    private string _description;

    private List<TaskOutputModel> _tasks;
    private IMasterService _masters;

    public TaskPage()
    {
        _masters = new MasterServiceMock();
    }
    protected override void OnInitialized()
    {
        var task = _masters.GetTaskById(Id);
        Id = task.Id;
        _title = task.Title;
        _orderId = task.OrderId;
        _status = task.StatusId.ToString();
        _timeStart = task.TimeStart;
        _timeEnd = task.TimeEnd;
        _description = task.Descriptions;
    }
 }
<section>
    <table class="table">
        <thead>
            <tr>
                <th>Название</th>
                <th>Номер заказа</th>
                <th>Статус заказа</th>
                <th>Время начала заказа</th>
                <th>Время окончания заказа</th>
                <th>Описание заказа</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@_title</td>
                <td>@_orderId</td>
                <td>@_status</td>
                <td>@_timeStart</td>
                <td>@_timeEnd</td>
                <td>@_description</td>
            </tr>
        </tbody>
    </table>
</section>
 
  
