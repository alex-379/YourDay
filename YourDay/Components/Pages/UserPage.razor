@page "/registration/{Id:int}"
@rendermode InteractiveServer


@code
{
    [Parameter]
    public int Id { get; set; }

    [Parameter]
    public UserOutputModel user { get; set; }

    private IUserService _userService;

    public UserPage()
    {
        _userService = new UserServiceMock();
        user = new UserOutputModel();
    }

    protected override void OnInitialized()
    {
        var p = _userService.GetUserById(Id);
        user.UserName = p.UserName;
        user.Mail = p.Mail;
        user.Phone = p.Phone;
    }
}

<section>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Имя</th>
                <th>e-mail</th>
                <th>Телефон</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Id</td>
                <td>@user.UserName</td>
                <td>@user.Mail</td>
                <td> @user.Phone</td>
            </tr>
        </tbody>
    </table>
</section>