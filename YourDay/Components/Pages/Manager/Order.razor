<div class="body">
     <section>
        <table class="table">
            <thead>
                <tr>
                    <th>Праздник</th>
                    <th>Дата</th>
                    <th>Адрес</th>
                    <th>Количество гостей</th>
                    <th>Цена</th>
                </tr>
            </thead>
            <tbody>
                    <tr>
                    <td>@_orders[0].OrderName</td>
                    <td> @_orders[0].Date</td>
                    <td>@_orders[0].Address</td>
                    <td>@_orders[0].CountPeople</td>
                    <td>@_orders[0].Price</td>
                    </tr>
            </tbody>
        </table>
