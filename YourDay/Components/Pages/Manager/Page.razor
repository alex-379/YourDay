@page "/p"
@rendermode InteractiveServer

<button type="button" onclick="window.closeMe.show()">
    Просто открыть
</button>
<button type="button" onclick="window.closeMe.showModal()">
    Открыть как модалку
</button>


<dialog 
        id="closeMe"
        aria-labelledby="heading">
    <h2 id="heading">Закрой меня! 🙏</h2>
    <p>Результат этих кнопок одинаковый.</p>

    <button type="button" onclick="window.closeMe.close()">
        Закрыть с помощью JavaScript
    </button>

    <form method="dialog">
        <!-- Если у тега <button> не указан type, то по-умолчанию
        он будет type="submit" ! -->
        <button>
            Закрыть с помощью формы
        </button>
    </form>
</dialog>

<form>
    <label for="fruits">Выберите фрукт:</label>
    <select id="fruits" name="fruits">
        <option value="apple">Яблоко</option>
        <option value="banana">Банан</option>
        <option value="orange">Апельсин</option>
    </select>
</form>