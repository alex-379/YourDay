@page "/newTask"
@attribute [StreamRendering]

<PageTitle>Новый заказ</PageTitle>

<div class="body">
    <div class="layout">
        <h2>Добавить заказ:</h2>
        <input type="text" placeholder="Задача">
        <input type="text" placeholder="Специализация">
        <input type="text" placeholder="Мастер">
        <input type="date" placeholder="Дата">
        <input type="text" placeholder="Статус">
        <form>
            <p>Выьерете статус:</p>
            <div>
                <input type="radio"
                       id="contactChoice1"
                       name="contact"
                       value="s1"
                       checked />
                <label for="contactChoice1">Получено</label>

                <input type="radio" id="contactChoice2" name="contact" value="s2" />
                <label for="contactChoice2">Передано</label>

                <input type="radio" id="contactChoice3" name="contact" value="s3" />
                <label for="contactChoice3">Сделано</label>
            </div>
        </form>
    </div>
    <button class="green-button">Добавить</button>
</div>