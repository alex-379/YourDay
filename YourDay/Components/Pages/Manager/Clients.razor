@page "/clients"
@attribute [StreamRendering]
@rendermode InteractiveServer
@inject NavigationManager NavigationManager
@inject IJSRuntime JSRuntime

<GetClaims SendIsCompleted="b=>_isCompleted=b" SendRole="p=>_role=p"></GetClaims>

@if (_isCompleted && _role != RoleUI.Manager.ToString())
{
    <ReturnToStart></ReturnToStart>
}
else
{
    <div class="body">
        <dialog id="worker" aria-labelledby="heading">
            <h2 id="heading">Что вы хотите сделать? &#128056 </h2>
            <form method="dialog">
                <button>
                    Полная информация
                </button>
                <button>
                    Изменить
                </button>
                <button @onclick="DeleteUser">
                    Удалить
                </button>
                <button>
                    Закрыть
                </button>
            </form>
        </dialog>

        <section>
            <h2 class="manager-h1"> Клиенты:</h2>
            <div class="container-task">
                <button class="order-button" data-bs-toggle="modal" data-bs-target="#registration"> + </button>
                @foreach (var i in _clients)
                {
                    <button @onclick="() => ShowModal(i.Id)" class="worker-button"> <WorkerCard worker="i" OnOpenModal="ShowModal"> </WorkerCard> </button>
                }
            </div>
        </section>
    </div>

    <div class="modal fade" id="registration" tabindex="-1" aria-hidden="true">
        <RegistrationModalForm AddUser="AddClient" />
    </div>
}

@code {
    private string? _role;

    private bool _isCompleted;

    private IUserService _userService;

    private IEnumerable<UserSpecializationOutputModel> _clients;

    private int selectedClientId;

    public Clients()
    {
        _userService = new UserService();
    }

    protected override void OnInitialized()
    {
        _clients = _userService.GetAllUsersSpecializationByRole(RoleUI.Client);
    }

    public void AddClient(UserRegistrationInputModel input)
    {
        var u = _userService.AddUser(input);
    }

    private void DeleteUser()
    {
        _userService.DeleteUser(selectedClientId);
    }

    private async Task ShowModal(int clientId)
    {
        selectedClientId = clientId;

        await JSRuntime.InvokeVoidAsync("worker.showModal");

        StateHasChanged();
    }
}