@page "/newTask"
@attribute [StreamRendering]

<PageTitle>Новый заказ</PageTitle>
<style>
    .layout-container {
        position: fixed;
        background-color: #0000009e;
        width: 100%;
        height: 100%;
        display: none;
        align-items: center;
        justify-content: center;
    }

    .layout {
        background-color: white;
        border-radius: 10px;
        width: 400px;
        padding: 30px;
    }

        .layout input {
            font-size: 20px;
            width: 100%;
            height: 50px;
            margin-bottom: 15px;
            border-radius: 10px;
        }

        .layout h2 {
            margin: 0 0 30px;
        }

    .green-button {
        color: white;
        background-color: #5DA271;
        border: 1px solid #5DA271;
    }

    button {
        flex: 1; /* Равномерно распределяет пространство между кнопками */
        padding: 10px 40px;
        margin: 25px 20px;
        border: none;
        border-radius: 20px;
    }

    .bod {
        margin: 0;
        padding: 0;
        font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
        font-size: 20px;
        line-height: 20px;
        color: #54494B;
    }
</style>


<div class="bod">
    <div class="layout">
        <h2>Добавить заказ:</h2>
        <input type="text" placeholder="Задача">
        <input type="text" placeholder="Специализация">
        <input type="text" placeholder="Мастер">
        <input type="date" placeholder="Дата">
        <input type="text" placeholder="Статус">
        <form>
            <p>Please select your preferred contact method:</p>
            <div>
                <input type="radio"
                       id="contactChoice1"
                       name="contact"
                       value="email"
                       checked />
                <label for="contactChoice1">Email</label>

                <input type="radio" id="contactChoice2" name="contact" value="phone" />
                <label for="contactChoice2">Phone</label>

                <input type="radio" id="contactChoice3" name="contact" value="mail" />
                <label for="contactChoice3">Mail</label>
            </div>
            <div>
                <button type="submit">Submit</button>
            </div>
        </form>

    </div>
    <button class="green-button">Добавить</button>
</div>