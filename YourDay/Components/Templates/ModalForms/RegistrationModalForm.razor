<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <h1 class="modal-title">Регистрация</h1>
            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <EditForm Model="@_inputService" OnValidSubmit="@Add">
            <DataAnnotationsValidator />
            <ValidationSummary />
            <div class="modal-body">

                <div class="form-group">
                    <label>Ваше имя:</label>
                    <InputText class="form-control" @bind-Value="@_inputService.UserName" type="name" />
                    <ValidationMessage For="@(() => _inputService.UserName)" />
                </div>
                <div class="form-group">
                    <label>Почта:</label>
                    <InputText class="form-control" @bind-Value="@_inputService.Mail" type="email" pattern="{8}" />
                    <p class="order-form-note">*Не менее 8 символов</p>
                </div>
                <div class="form-group">
                    <label>Телефон:</label>
                    <input type="tel" class="form-control" @bind=_inputService.Phone pattern="\+7\-[0-9]{3}\-[0-9]{3}\-[0-9]{2}\-[0-9]{2}"/>
                    <p class="order-form-note">*В формате: 9996668855</p>
                </div>
                <div class="form-group">
                    <label>Пароль:</label>
                    <InputText class="form-control" @bind-Value="@_inputService.Password" type="password" />
                </div>
            </div>
            <div class="modal-footer">
                <button type="submit" class="purple-button" data-bs-toggle="modal" data-bs-target="#infoRegistration">Регистрация</button>
                <button type="button" class="purple-button" data-bs-dismiss="modal">Отмена</button>
            </div>
        </EditForm> 
    </div>
</div>
 


@code {
    private UserRegistrationInputModel _inputService;

    [Parameter]
    public Action<UserRegistrationInputModel> AddUser { get; set; }

    public RegistrationModalForm()
    {
        _inputService = new UserRegistrationInputModel();
    }

    private void Add()
    {
        AddUser(_inputService);
    }
}