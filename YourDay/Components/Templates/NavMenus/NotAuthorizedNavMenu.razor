    <InfoRegistrationModalForm />
</div>

@code {
    private IUserService _userService;

    public NotAuthorizedNavMenu()
    {
        _userService = new UserService();
    }

    public void AddClient(UserRegistrationInputModel input)
    {
        _userService.AddUser(input);
    }
} 